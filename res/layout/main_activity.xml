<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/seperatorBar" >
    </ListView>

    <View
        android:id="@+id/seperatorBar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/consoleBar"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/consoleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statusText"
        android:layout_alignWithParentIfMissing="true" >

        <Button
            android:id="@+id/RefreshButtton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/refresh_animation"
            android:onClick="OnRefreshClicked" />

        <ImageButton
            android:id="@+id/ShareButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:contentDescription="@string/share_with_friends"
            android:onClick="OnShareWithFriendClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/thumbsup" />
        
        <ImageButton
            android:id="@+id/SettingsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:contentDescription="@string/settings"
            android:onClick="OnSettingsClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textIsSelectable="false" >
    </TextView>

</RelativeLayout>